[*]
charset=utf-8
end_of_line=crlf
trim_trailing_whitespace=true
insert_final_newline=true
indent_style=space
indent_size=4

[{*.sht,*.htm,*.html,*.shtm,*.shtml}]
indent_style=space
indent_size=2

[{.eslintrc,.prettierrc,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=2

[*.css]
indent_style=space
indent_size=2

[*.scss]
indent_style=space
indent_size=2

[{*.cjs,*.js}]
indent_style=space
indent_size=2

[{*.ts,*.ats}]
indent_style=space
indent_size=2

[tsconfig.json]
indent_style=space
indent_size=2

[*.js.map]
indent_style=space
indent_size=2

[{*.jade,*.pug}]
indent_style=space
indent_size=2

[*.vue]
indent_style=space
indent_size=2

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

