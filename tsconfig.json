{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    /* output */
    "listFiles": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "preserveConstEnums": true,
    /* check */
    "strict": true,
//    "allowJs": true,
    //    "checkJs": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    //    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    /* 加载的声明文件包 */
    /*"types": [
      "chrome",
      "js-yaml",
      "lodash",
      "node"
    ],*/
    /* 解析非相对模块的基地址，默认是当前目录 */
    "baseUrl": ".",
    /* 路径映射，相对于baseUrl */
    "paths": {
      "@/*": [
        "src/*"
      ],
      "types/*": [
        "types/*"
      ]
    },
    /* TS需要引用的库 */
    "lib": [
      "esnext",
      "es6",
      "es7",
      "dom",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
